<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CSV to JSON Converter</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
        }

        #uploadForm {
            max-width: 400px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        input[type="file"] {
            display: block;
            margin-bottom: 10px;
        }

        button[type="submit"] {
            display: block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

        #jsonData {
            display: none;
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
            max-height: 500px; /* Adjust as needed */
        }

        pre {
            white-space: pre-wrap;
            word-wrap: break-word;
            overflow: auto;
            font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
            font-size: 14px;
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <h1>CSV to JSON Converter</h1>
    <form id="uploadForm" enctype="multipart/form-data">
        <input type="file" id="csvfile" name="csvfile" accept=".csv">
        <button type="submit">Upload CSV</button>
    </form>
    <div id="jsonData"></div>

    <script>
        // document.getElementById('uploadForm').addEventListener('submit', async function(event) {
        document.getElementById('uploadForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            const formData = new FormData();
            formData.append('csvfile', this.csvfile.files[0]);

            try {
                const response = await fetch('http://localhost:5011/csv_json/upload', {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    throw new Error('Failed to upload file');
                }

                const jsonData = await response.json();
                displayJSON(jsonData);
            } catch (error) {
                console.error(error);
            }
        });

        function displayJSON(jsonData) {
            const jsonDataDiv = document.getElementById('jsonData');
            jsonDataDiv.style.display = 'block'; // Show the jsonData div
            jsonDataDiv.innerHTML = '<h2>Converted JSON:</h2>';
            const preElement = document.createElement('pre');
            preElement.textContent = JSON.stringify(jsonData, null, 2);
            jsonDataDiv.appendChild(preElement);
        }
    </script>
</body>
</html>
